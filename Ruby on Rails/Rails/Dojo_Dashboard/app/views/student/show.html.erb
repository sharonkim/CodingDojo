<h1><%= "#{@student.branch}'s'" "#{@student.first_name}" "#{@student.last_name}" %></h1>

<% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
<% end %>

<h4>Email: <%= "#{@student.email}" %></h4>
<h3>Cohort</h3>
<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>

        <% @cohort.each do |student| %>

            <tr>
                <td><%= student.first_name %></td>
                <td><%= student.last_name %></td>
                <td><%= student.email %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to "Home", root_path %> |
<%= link_to "Edit", edit_dojo_student_patch(@student.dojo_id), @student.id %>
