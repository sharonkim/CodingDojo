<%= image_tag("edit.png") %>
<div class="left">
    <% content_for :left do %>
    <h4><%= @character.fname %> <%= @character.lname %></h4>
    <p><%= @character.workplace %></p>
    <% end %>
</div><br>
<div class="right">
    <% content_for :right do %>
    <form action="/character/<%= @character.id %>" method="post">
        First Name: <input type="text" class="form-horizontal" id="character[fname]" value="<%= @character.fname %>">
        Last Name: <input type="text" class="form-horizontal" id="character[lname]" value="<%= @character.lname %>">
        Workplace: <input type="text" class="form-horizontal" id="character[workplace]" value="<%= @character.workplace %>">
        <input type="submit" value="Update">
    </form>
    <% end %>
</div>
