<% content_for :left do %>
  <h1>All Users</h1>
  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Favorite Language</th>
      </tr>
    </thead>
    <tbody>
      <% User.all.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.favorite_language %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% content_for :right do %>
  <h1>New User</h1>
  <%= form_for User.new, :url => { :action => "create" }, :html => { :create => "form-signin" } do |user| %>
    <%= user.label :first_name %>
      <%= user.text_field :first_name, class: "form-control" %>
    <%= user.label :last_name %>
      <%= user.text_field :last_name, class: "form-control" %>
    <%= user.label :favorite_language %>
      <%= user.text_field :favorite_language, class "form-control" %>
    <%= submit_tag "Create User", class: "btn btn-primary" %>
  <% end %>
<% end %>
